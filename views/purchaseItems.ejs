<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurants</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>

<body>
    <%- include('partials/navbar') %>
    <!-- Actual page content! -->
    <div class="container">
        <h1>Buy Food From (This Restaurant)</h1>
        <div class="section flow-text" id="details">
            <table>
                <thead>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Allergens</th>
                    <th scope="col">Price</th>
                </thead>
                <tbody>
                    <% for (let i = 0; i < foodlist.length; i++) { %>
                    <tr>
                        <td><%= foodlist[i].food_name %></td>
                        <td><%= foodlist[i].food_description %></td>
                        <td><%= foodlist[i].food_allergens %></td>
                        <td><%= foodlist[i].food_price %></td>
                        <td>
                            <a class="btn-small waves-effect waves-light" href="/restaurants/<%= foodlist[i].food_id %>/add">
                                <i class="material-icons right">shopping_cart</i>
                                Add To Cart
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>

            <a class="btn" href="/cart">
                <i class="material-icons right">shopping_cart</i> View cart
            </a>

            <h2>Reviews</h2>
            <table>
                <thead>
                    <th scope="col">Score</th>
                    <th scope="col">Description</th>
                </thead>
                <% for (let i = 0; i < reviewlist.length; i++) { %>
                <tr>
                    <td><%= reviewlist[i].review_score %></td>
                    <td><%= reviewlist[i].review_description %></td>
                    <!-- <td>
                        <a class="btn-small waves-effect waves-light" href="/restaurants/">
                            <i class="material-icons right">edit</i>
                            Info/Edit
                        </a>
                    </td> -->
                </tr>
                <% } %>
            </table>
            <h2>Add Review</h2>
            
            <form id="addForm" method="post" action="/restaurants/<%= foodlist[0].restaurant_id %>">
                <div class="row">
                    <div class="input-field col s2">
                        <input id="score" type="number" class="validate">
                        <label for="score">Score out of 10</label>
                    </div>
                    <div class="input-field col s10">
                        <input id="description" type="text" class="validate">
                        <label for="description">Description</label>
                    </div>
                </div>

                <button class="btn waves-effect waves-light" type="submit">
                    <i class="material-icons right">send</i>
                    Submit
                </button>
            </form>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- Auto-initialize Materialize elements (Note - more specific initialization may be required for certain elements)-->
    <script src="/scripts/materializeAutoInit.js"></script>

</body>

</html>